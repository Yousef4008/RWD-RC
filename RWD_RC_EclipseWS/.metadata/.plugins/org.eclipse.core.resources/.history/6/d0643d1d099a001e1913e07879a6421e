#define ALL_PROJECT_FLAGS_H_

/*******************************************************************************
 *                                Definitions                                  *
 *******************************************************************************/

#define CAR_MOTION_FORWARD    0 /*this preprocessor for make a car move forward*/

#define CAR_MOTION_BACKWARD   1 /*this preprocessor for make a car move backward*/

#define CAR_START_MOTION      2	/*this preprocessor for make a car start motion*/

#define CAR_BUZZER            3 /*this preprocessor for make a turn on the buzzer*/

